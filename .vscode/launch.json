  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lighthouse",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "console": "internalConsole",
      "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
        "LIGHTHOUSE_SECRET_KEY": "come all unto me"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    }
  ]
}